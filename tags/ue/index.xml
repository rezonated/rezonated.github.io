&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 2&lt;/span>&lt;span>{
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 3&lt;/span>&lt;span>	&lt;span style="color:#cdcd00">if&lt;/span> (PlayerController)
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 4&lt;/span>&lt;span>	{
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 5&lt;/span>&lt;span>		&lt;span style="color:#cdcd00">if&lt;/span> (PlayerController&lt;span style="color:#39c">-&amp;gt;&lt;/span>GetPawn&lt;span style="color:#39c">&amp;lt;&lt;/span>AMyCharacter&lt;span style="color:#39c">&amp;gt;&lt;/span>())
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 6&lt;/span>&lt;span>		{
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 7&lt;/span>&lt;span>			&lt;span style="color:#cdcd00">if&lt;/span> (PlayerController&lt;span style="color:#39c">-&amp;gt;&lt;/span>GetPawn&lt;span style="color:#39c">&amp;lt;&lt;/span>AMyCharacter&lt;span style="color:#39c">&amp;gt;&lt;/span>()&lt;span style="color:#39c">-&amp;gt;&lt;/span>GetMyWeaponComponent())
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 8&lt;/span>&lt;span>			{
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666"> 9&lt;/span>&lt;span>				PlayerController&lt;span style="color:#39c">-&amp;gt;&lt;/span>GetPawn&lt;span style="color:#39c">&amp;lt;&lt;/span>AMyCharacter&lt;span style="color:#39c">&amp;gt;&lt;/span>()&lt;span style="color:#39c">-&amp;gt;&lt;/span>GetMyWeaponComponent()&lt;span style="color:#39c">-&amp;gt;&lt;/span>EquipWeapon();
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666">10&lt;/span>&lt;span>			}
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span style="white-space:pre;-webkit-user-select:none;user-select:none;margin-right:0.4em;padding:0 0.4em 0 0.4em;color:#666">11&lt;/span>&lt;span>		}
